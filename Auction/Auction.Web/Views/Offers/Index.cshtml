@model Auction.Web.Models.OffersCategoriesViewModel

@{
    ViewBag.Title = "All Offers";
}

<div class="jumbotron">
    <h1>All Offers</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <div class="sidebar-nav">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <span class="visible-xs navbar-brand">Sidebar menu</span>
                    </div>
                    <div class="navbar-collapse collapse sidebar-navbar-collapse">
                        <h3>Categories</h3>
                        <hr />
                        <ul class="nav navbar-nav">
                            @if (User.IsInRole("Administrator"))
                            {
                                <li><div class="btn btn-success"><a href="/Categories/Add">Add</a></div></li>
                            }
                            <li class="active"><a href="/Offers/Index">All Categories</a></li>
                            @foreach (var category in Model.Categories)
                            {
                                <li><a href="/Offers/Index/@category.Id">@category.Name</a></li>
                            }
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="col-sm-10">
            @using (Html.BeginForm())
            {
                <p>
                    Find by name: @Html.TextBox("SearchString")
                    <input type="submit" value="Search" />
                </p>
            }
            @Html.DisplayFor(x => x.AllOffersViewModel)
        </div>
    </div>
</div>
    

