@model Auction.Web.Areas.Administrator.Models.ApproveOffersViewModel

@{
    var imgSrc = string.Empty;
    if (Model.Photo != null)
    {
        var base64 = Convert.ToBase64String(Model.Photo);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="panel panel-default">
    <div class="row">
        <div class="panel-body col-md-4 text-center">
            <p><strong>@Model.Name</strong></p>
            <img src="@imgSrc" width="100" height="100" />
        </div>
        <div class="panel-body col-md-4">
            <p>@Model.CurrentPrice $</p>
            if(@Model.EndTime < @DateTime.Now)
            {
                <p>EXPIRED</p>
            }
            else
            {
                <p>Valid to: @Model.EndTime</p>
            }
        </div>
        <div class="panel-body col-md-4">
            <p>@Model.Description</p>
            <div class="btn btn-success"><a href="/Admin/ApproveOffer/@Model.Id">Approve</a></div>
            <div class="btn btn-danger"><a href="/Admin/DeleteOffer/@Model.Id">Delete</a></div>
        </div>
    </div>
</div>

